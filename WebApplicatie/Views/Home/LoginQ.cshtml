@model Login

@{
    ViewData["Title"] = "Create";
}

<h1>Inloggen</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Gebruikersnaam" class="control-label"></label>
                <input asp-for="Gebruikersnaam" class="form-control" />
                <span asp-validation-for="Gebruikersnaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wachtwoord" class="control-label"></label>
                <input asp-for="Wachtwoord" class="form-control" />
                <span asp-validation-for="Wachtwoord" class="text-danger"></span>
            </div>
        <div class="form-group">
                <button onclick="alert('U wordt ingelogd')" id="Maak aan">Login</button>
     </div>
       </form>
</div>
            
    @section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

          